@using EntityLayer.Concrete
@model Customer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1>Müşteri Ekleme Sayfası</h1>
<div class="form-container">
    <form  method="post">

        @Html.Label("Müşteri Adı:")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
        <br />
        @Html.Label("Şehir Adı:")
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.City)

        @Html.Label("Meslek Seçiniz:")
        @Html.DropDownListFor(x => x.JobId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        <br />


        <button class="btn btn-outline-primary">Ekle</button>

    </form>
   

 
</div>

